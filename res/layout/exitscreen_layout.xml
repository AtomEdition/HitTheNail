<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:gravity="center">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/TryOther"
            android:id="@+id/Try" android:layout_gravity="center_horizontal" android:padding="10dp" android:textSize="25dp"/>
    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:id="@+id/appsTable">
    </TableLayout>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Close"
            android:id="@+id/exitButton" android:layout_gravity="center_horizontal" style="@style/ButtonStyle"
            android:onClick="closeClick" android:layout_marginTop="10dp"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ExitMessage"
            android:id="@+id/MessageCheckBox" android:layout_gravity="center_horizontal" android:textSize="15dp"
            android:layout_margin="10dp" android:checked="false"/>
</LinearLayout>